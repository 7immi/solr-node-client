extends layout

block nav
  ul.pages
    li: a(href= (site.ghbaseurl) ? site.ghbaseurl : '/') Home
    - if (files.support)
      for page in files.support
        li: a(href=site.ghbaseurl + page.href)= page.title
  - if (files.code)
    ul.code
      for page in files.code
        - if (page.template == 'code-index')
          li.header: a(href=site.ghbaseurl + page.href)= page.title
      for page in files.code
        - if (page.template == 'code' && !page.title.match(/examples/))
          li: a(href=site.ghbaseurl + page.href)= page.title
  - if (files.code)
    - var count = 0;
    ul.code
      for page in files.code
        - if (page.template == 'code' && page.title.match(/examples/))
            - count++;
            - if(count === 1)
              li.header(style='font-family:"Lato", "Helvetica Neue", Helvetica, Arial, sans-serif;color:#666;font-size:14px') examples
            li: a(href=site.ghbaseurl + page.href)= page.name

block content
  h1= file.title
  article
    .header!= file.prepared
    .files
      for spec in files.code
        - if (!spec.title.match(/examples/) && spec.template !== 'code-index')
          h3: a(href=site.ghbaseurl + spec.href)= spec.title
          p!= spec.description
